<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <data>

    <!-- Inherit view hotel restaurant reservation form-->
    <record model="ir.ui.view" id="view_hotel_reservation_form">
      <field name="model">hotel.reservation</field>
      <field name="inherit_id" ref="hotel_reservation.view_hotel_reservation_form"/>
      <field name="arch" type="xml">

          <field name="checkin" position="attributes">
            <attribute name="invisible">1</attribute>
          </field>

          <field name="checkout" position="attributes">
            <attribute name="invisible">1</attribute>
          </field>

          <xpath expr="//field[@name='adults']" position="before">
            <field name="fecha_entrada" class="oe_inline"/>
          </xpath>

          <xpath expr="//field[@name='adults']" position="before">
            <field name="fecha_salida" class="oe_inline"/>
          </xpath>

          <xpath expr="//button[@name='done']" position="after">
            <field name="arriban_hoy" invisible="1"/>
          </xpath>

          <xpath expr="//button[@name='done']" position="attributes">
            <attribute name="attrs">{'invisible': [('arriban_hoy', '=', False)]}</attribute>
          </xpath>

          <xpath expr="//field[@name='date_order']" position="inside">
            <attribute name="date_order" class="oe_inline"/>
          </xpath>

          <xpath expr="//field[@name='warehouse_id']" position="inside">
            <attribute name="warehouse_id" class="oe_inline" readonly="0"/>
          </xpath>

          <xpath expr="//field[@name='partner_id']" position="inside">
            <attribute name="partner_id" class="oe_inline"/>
          </xpath>

          <xpath expr="//field[@name='partner_order_id']" position="inside">
            <attribute name="partner_order_id" class="oe_inline"/>
          </xpath>

          <xpath expr="//field[@name='partner_invoice_id']" position="inside">
            <attribute name="partner_invoice_id" class="oe_inline"/>
          </xpath>

          <xpath expr="//field[@name='pricelist_id']" position="inside">
            <attribute name="pricelist_id" class="oe_inline"/>
          </xpath>
          
      </field>
    </record>

  </data>
</odoo>